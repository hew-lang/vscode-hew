{
  "name": "hew-lang",
  "displayName": "Hew Language",
  "description": "Syntax highlighting and language support for the Hew programming language",
  "version": "1.0.0",
  "publisher": "hew-lang",
  "license": "Apache-2.0",
  "icon": "icons/hew-dark.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "hew",
    "actor",
    "concurrency",
    "systems programming"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hew-lang/vscode-hew"
  },
  "bugs": {
    "url": "https://github.com/hew-lang/vscode-hew/issues"
  },
  "homepage": "https://github.com/hew-lang/vscode-hew#readme",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:hew"
  ],
  "extensionKind": [
    "workspace"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hew",
        "aliases": [
          "Hew",
          "hew"
        ],
        "extensions": [
          ".hew"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/hew-light.png",
          "dark": "./icons/hew-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "hew",
        "scopeName": "source.hew",
        "path": "./syntaxes/hew.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Hew",
      "properties": {
        "hew.lsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the hew-lsp binary. If empty, searches workspace target/ directories and PATH."
        },
        "hew.formatterPath": {
          "type": "string",
          "default": "",
          "description": "Path to the hew binary used for formatting. If empty, searches workspace target/ directories and PATH."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "build": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify --sourcemap",
    "build:dev": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "vscode:prepublish": "npm run build",
    "package": "npm run build && vsce package",
    "test": "npm run test:grammar && vitest run",
    "test:grammar": "vscode-tmgrammar-test -g syntaxes/hew.tmLanguage.json tests/grammar/*.test.hew"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vscode-tmgrammar-test": "^0.1.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
