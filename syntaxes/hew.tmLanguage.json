{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Hew",
  "scopeName": "source.hew",
  "fileTypes": [
    "hew"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#attributes"
    },
    {
      "include": "#wire-annotations"
    },
    {
      "include": "#function-definitions"
    },
    {
      "include": "#actors"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#function-calls"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.inner.hew",
          "match": "//!.*$"
        },
        {
          "name": "comment.line.documentation.hew",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.hew",
          "match": "//.*$"
        },
        {
          "name": "comment.block.hew",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "string-escape": {
      "name": "constant.character.escape.hew",
      "match": "\\\\(n|r|t|\\\\|\"|0|x[0-9a-fA-F]{2})"
    },
    "strings": {
      "patterns": [
        {
          "comment": "Interpolated string: f\"hello {name}\"",
          "name": "string.interpolated.hew",
          "begin": "f\"",
          "end": "\"",
          "patterns": [
            {
              "name": "meta.interpolation.hew",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": {
                  "name": "punctuation.section.interpolation.begin.hew"
                }
              },
              "endCaptures": {
                "0": {
                  "name": "punctuation.section.interpolation.end.hew"
                }
              },
              "patterns": [
                {
                  "include": "$self"
                }
              ]
            },
            {
              "include": "#string-escape"
            }
          ]
        },
        {
          "comment": "Regex literal: re\"pattern\"",
          "name": "string.regexp.hew",
          "begin": "re\"",
          "end": "\"",
          "patterns": [
            {
              "include": "#string-escape"
            }
          ]
        },
        {
          "comment": "Raw string: r\"no escapes\"",
          "name": "string.quoted.raw.hew",
          "begin": "r\"",
          "end": "\""
        },
        {
          "comment": "Regular double-quoted string",
          "name": "string.quoted.double.hew",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "include": "#string-escape"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "comment": "Duration literals: 100ms, 5s, 1h",
          "name": "constant.numeric.duration.hew",
          "match": "\\b[0-9][0-9_]*(ns|us|ms|s|m|h)\\b"
        },
        {
          "comment": "Hex integer: 0xFF",
          "name": "constant.numeric.hex.hew",
          "match": "\\b0[xX][0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "comment": "Octal integer: 0o17",
          "name": "constant.numeric.octal.hew",
          "match": "\\b0[oO][0-7][0-7_]*\\b"
        },
        {
          "comment": "Binary integer: 0b1010",
          "name": "constant.numeric.binary.hew",
          "match": "\\b0[bB][01][01_]*\\b"
        },
        {
          "comment": "Float: 3.14, 1.0e-5",
          "name": "constant.numeric.float.hew",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9][0-9_]*)?\\b"
        },
        {
          "comment": "Decimal integer",
          "name": "constant.numeric.integer.hew",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "attributes": {
      "comment": "Attribute syntax: #[test], #[inline]",
      "name": "meta.attribute.hew",
      "begin": "#\\[",
      "end": "\\]",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.attribute.begin.hew"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.attribute.end.hew"
        }
      },
      "patterns": [
        {
          "name": "entity.name.function.attribute.hew",
          "match": "[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "include": "#strings"
        }
      ]
    },
    "wire-annotations": {
      "comment": "Wire field tags (@1, @2) and loop labels (@outer, @inner)",
      "patterns": [
        {
          "comment": "Wire field tag: @1, @2",
          "name": "constant.numeric.wire-tag.hew",
          "match": "@\\d+"
        },
        {
          "comment": "Loop / block label: @outer, @inner",
          "name": "entity.name.label.hew",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "comment": "Control flow",
          "name": "keyword.control.hew",
          "match": "\\b(after|await|break|continue|cooperate|defer|else|for|from|if|in|join|loop|match|return|scope|select|while|yield)\\b"
        },
        {
          "comment": "Declarations",
          "name": "keyword.declaration.hew",
          "match": "\\b(async|const|enum|extern|fn|gen|impl|import|let|package|pub|super|trait|type|var|where)\\b"
        },
        {
          "comment": "Actor and concurrency",
          "name": "keyword.actor.hew",
          "match": "\\b(actor|init|move|receive|spawn)\\b"
        },
        {
          "comment": "Supervisor",
          "name": "keyword.supervisor.hew",
          "match": "\\b(budget|child|restart|strategy|supervisor)\\b"
        },
        {
          "comment": "Supervisor strategy and overflow policy values",
          "name": "constant.language.strategy.hew",
          "match": "\\b(one_for_all|one_for_one|permanent|rest_for_one|temporary|transient)\\b"
        },
        {
          "comment": "Wire protocol keywords",
          "name": "keyword.wire.hew",
          "match": "\\b(default|deprecated|optional|reserved|wire)\\b"
        },
        {
          "comment": "Other keywords",
          "name": "keyword.other.hew",
          "match": "\\b(dyn|isolated|unsafe)\\b"
        },
        {
          "comment": "Logical operators as keywords",
          "name": "keyword.operator.logical.hew",
          "match": "\\b(and|or)\\b"
        },
        {
          "comment": "Boolean literals",
          "name": "constant.language.boolean.hew",
          "match": "\\b(false|true)\\b"
        },
        {
          "comment": "None literal",
          "name": "constant.language.none.hew",
          "match": "\\bNone\\b"
        },
        {
          "comment": "Reserved keywords (not yet used in the language)",
          "name": "keyword.reserved.hew",
          "match": "\\b(catch|foreign|race|struct|try)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "comment": "Numeric types",
          "name": "storage.type.numeric.hew",
          "match": "\\b(f32|f64|i16|i32|i64|i8|isize|u16|u32|u64|u8|usize)\\b"
        },
        {
          "comment": "Primitive types",
          "name": "storage.type.primitive.hew",
          "match": "\\b(bool|char|never|string|void)\\b"
        },
        {
          "comment": "Generic / collection types",
          "name": "storage.type.generic.hew",
          "match": "\\b(ActorStream|Arc|Err|HashMap|Ok|Option|Range|Rc|Result|Some|Vec|Weak)\\b"
        },
        {
          "comment": "Concurrency types",
          "name": "storage.type.concurrency.hew",
          "match": "\\b(ActorRef|AsyncGenerator|Generator|Scope|Sink|Stream|Task)\\b"
        },
        {
          "comment": "Built-in trait names",
          "name": "storage.type.trait.hew",
          "match": "\\b(Copy|Frozen|Send)\\b"
        },
        {
          "comment": "Self types",
          "name": "storage.type.self.hew",
          "match": "\\bSelf\\b"
        },
        {
          "comment": "PascalCase type name",
          "name": "entity.name.type.hew",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "function-definitions": {
      "patterns": [
        {
          "comment": "Generator function definition (gen fn, async gen fn, receive gen fn)",
          "match": "\\b((?:receive\\s+)?(?:async\\s+)?gen)\\s+(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.hew"
            },
            "2": {
              "name": "keyword.declaration.hew"
            },
            "3": {
              "name": "entity.name.function.hew"
            }
          }
        },
        {
          "comment": "Receive fn definition",
          "match": "\\b(receive)\\s+(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.actor.hew"
            },
            "2": {
              "name": "keyword.declaration.hew"
            },
            "3": {
              "name": "entity.name.function.hew"
            }
          }
        },
        {
          "comment": "Function definition",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.hew"
            },
            "2": {
              "name": "entity.name.function.hew"
            }
          }
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "comment": "Function call (placed after keywords to prevent matching if/match/etc.)",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.call.hew"
            }
          }
        }
      ]
    },
    "actors": {
      "patterns": [
        {
          "comment": "Actor declaration",
          "match": "\\b(actor)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.actor.hew"
            },
            "2": {
              "name": "entity.name.type.actor.hew"
            }
          }
        },
        {
          "comment": "Supervisor declaration",
          "match": "\\b(supervisor)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.supervisor.hew"
            },
            "2": {
              "name": "entity.name.type.supervisor.hew"
            }
          }
        },
        {
          "comment": "Trait declaration",
          "match": "\\b(trait)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.hew"
            },
            "2": {
              "name": "entity.name.type.trait.hew"
            }
          }
        },
        
        {
          "comment": "Enum declaration",
          "match": "\\b(enum)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.hew"
            },
            "2": {
              "name": "entity.name.type.enum.hew"
            }
          }
        },
        {
          "comment": "Impl Trait for Type",
          "match": "\\b(impl)\\s+([A-Z][a-zA-Z0-9_]*)\\s+(for)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.hew"
            },
            "2": {
              "name": "entity.name.type.trait.hew"
            },
            "3": {
              "name": "keyword.declaration.hew"
            },
            "4": {
              "name": "entity.name.type.hew"
            }
          }
        },
        {
          "comment": "Wire type/enum declaration",
          "match": "\\b(wire)\\s+(type|enum)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.wire.hew"
            },
            "2": {
              "name": "keyword.declaration.hew"
            },
            "3": {
              "name": "entity.name.type.wire.hew"
            }
          }
        },
        {
          "comment": "Child spec in supervisor",
          "match": "\\b(child)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.supervisor.hew"
            },
            "2": {
              "name": "variable.other.hew"
            },
            "3": {
              "name": "entity.name.type.hew"
            }
          }
        },
        {
          "comment": "Spawn expression",
          "match": "\\b(spawn)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.actor.hew"
            },
            "2": {
              "name": "entity.name.type.hew"
            }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "comment": "Arrow operators",
          "name": "keyword.operator.arrow.hew",
          "match": "->|=>"
        },
        {
          "comment": "Send operator",
          "name": "keyword.operator.send.hew",
          "match": "<-"
        },
        {
          "comment": "Range operators",
          "name": "keyword.operator.range.hew",
          "match": "\\.\\.=|\\.\\.(?!\\.)"
        },
        {
          "comment": "Regex match operators",
          "name": "keyword.operator.regex.hew",
          "match": "=~|!~"
        },
        {
          "comment": "Comparison operators",
          "name": "keyword.operator.comparison.hew",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "comment": "Bitwise shift compound assignment",
          "name": "keyword.operator.assignment.compound.hew",
          "match": "<<=|>>="
        },
        {
          "comment": "Bitwise compound assignment",
          "name": "keyword.operator.assignment.compound.bitwise.hew",
          "match": "&=|\\|=|\\^="
        },
        {
          "comment": "Compound assignment operators",
          "name": "keyword.operator.assignment.compound.hew",
          "match": "\\+=|-=|\\*=|/=|%="
        },
        {
          "comment": "Assignment operator",
          "name": "keyword.operator.assignment.hew",
          "match": "="
        },
        {
          "comment": "Bitwise shift operators",
          "name": "keyword.operator.bitwise.shift.hew",
          "match": "<<|>>"
        },
        {
          "comment": "Bitwise NOT operator",
          "name": "keyword.operator.bitwise.not.hew",
          "match": "~"
        },
        {
          "comment": "Arithmetic operators",
          "name": "keyword.operator.arithmetic.hew",
          "match": "[+\\-*/%]"
        },
        {
          "comment": "Error propagation",
          "name": "keyword.operator.question.hew",
          "match": "\\?"
        },
        {
          "comment": "Logical not",
          "name": "keyword.operator.not.hew",
          "match": "!"
        },
        {
          "comment": "Namespace separator",
          "name": "keyword.operator.namespace.hew",
          "match": "::"
        },
        {
          "comment": "Attribute / wire tag marker",
          "name": "keyword.operator.at.hew",
          "match": "@"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.brackets.round.hew",
          "match": "[()]"
        },
        {
          "name": "punctuation.brackets.curly.hew",
          "match": "[{}]"
        },
        {
          "name": "punctuation.brackets.square.hew",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.separator.comma.hew",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.hew",
          "match": ";"
        },
        {
          "name": "punctuation.separator.colon.hew",
          "match": ":"
        },
        {
          "name": "punctuation.separator.dot.hew",
          "match": "\\."
        },
        {
          "name": "punctuation.separator.pipe.hew",
          "match": "\\|"
        },
        {
          "name": "punctuation.separator.ampersand.hew",
          "match": "&"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "comment": "self reference",
          "name": "variable.language.self.hew",
          "match": "\\bself\\b"
        },
        {
          "comment": "Wildcard pattern",
          "name": "variable.language.wildcard.hew",
          "match": "\\b_\\b"
        },
        {
          "comment": "Contextual identifiers (special meaning in specific contexts)",
          "name": "variable.language.contextual.hew",
          "match": "\\b(block|coalesce|drop_new|drop_old|export|fail|fallback|json|mailbox|max_restarts|mut|overflow|repeated|window|yaml)\\b"
        },
        {
          "comment": "Identifier (catch-all for variables, parameters, fields)",
          "name": "variable.other.hew",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
