{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Hew",
  "scopeName": "source.hew",
  "fileTypes": ["hew"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#actors" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.hew",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.hew",
          "match": "//.*$"
        },
        {
          "name": "comment.block.hew",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            { "include": "#comments" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.interpolated.hew",
          "begin": "f\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.hew",
              "match": "\\\\[nrt\\\\\"0]|\\\\x[0-9a-fA-F]{2}"
            },
            {
              "name": "meta.interpolation.hew",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.hew" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.hew" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.raw.hew",
          "begin": "r\"",
          "end": "\""
        },
        {
          "name": "string.quoted.double.hew",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.hew",
              "match": "\\\\[nrt\\\\\"0]|\\\\x[0-9a-fA-F]{2}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.duration.hew",
          "match": "\\b[0-9][0-9_]*(ns|us|ms|s|m|h)\\b"
        },
        {
          "name": "constant.numeric.hex.hew",
          "match": "\\b0x[0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "name": "constant.numeric.binary.hew",
          "match": "\\b0b[01][01_]*\\b"
        },
        {
          "name": "constant.numeric.float.hew",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9][0-9_]*)?\\b"
        },
        {
          "name": "constant.numeric.integer.hew",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "comment": "Control flow keywords",
          "name": "keyword.control.hew",
          "match": "\\b(if|else|match|loop|for|in|while|break|continue|return|try)\\b"
        },
        {
          "comment": "Declaration keywords",
          "name": "keyword.declaration.hew",
          "match": "\\b(let|var|const|fn|type|struct|enum|trait|impl|import|pub|package|super)\\b"
        },
        {
          "comment": "Actor and concurrency keywords",
          "name": "keyword.actor.hew",
          "match": "\\b(actor|isolated|receive|init|spawn|scope|async|await|move)\\b"
        },
        {
          "comment": "Supervisor keywords",
          "name": "keyword.supervisor.hew",
          "match": "\\b(supervisor|child|restart|budget|strategy)\\b"
        },
        {
          "comment": "Supervisor strategy values",
          "name": "constant.language.strategy.hew",
          "match": "\\b(one_for_one|one_for_all|rest_for_one|permanent|transient|temporary)\\b"
        },
        {
          "comment": "Wire type keywords",
          "name": "keyword.wire.hew",
          "match": "\\b(wire|reserved|optional|deprecated|default)\\b"
        },
        {
          "comment": "Other keywords",
          "name": "keyword.other.hew",
          "match": "\\b(dyn|unsafe|extern)\\b"
        },
        {
          "comment": "Logical operators as keywords",
          "name": "keyword.operator.logical.hew",
          "match": "\\b(and|or)\\b"
        },
        {
          "comment": "Boolean literals",
          "name": "constant.language.boolean.hew",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "comment": "Built-in numeric types",
          "name": "storage.type.numeric.hew",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|isize|usize)\\b"
        },
        {
          "comment": "Built-in primitive types",
          "name": "storage.type.primitive.hew",
          "match": "\\b(bool|char|string|bytes)\\b"
        },
        {
          "comment": "Built-in generic types",
          "name": "storage.type.generic.hew",
          "match": "\\b(Result|Option|Actor|Send|Frozen|Copy|String)\\b"
        },
        {
          "comment": "Type name (PascalCase identifier after : or -> or type position)",
          "name": "entity.name.type.hew",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "comment": "Function definition",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.hew" },
            "2": { "name": "entity.name.function.hew" }
          }
        },
        {
          "comment": "Receive function definition",
          "match": "\\b(receive)\\s+(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.actor.hew" },
            "2": { "name": "keyword.declaration.hew" },
            "3": { "name": "entity.name.function.hew" }
          }
        },
        {
          "comment": "Function call",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.call.hew" }
          }
        }
      ]
    },
    "actors": {
      "patterns": [
        {
          "comment": "Actor declaration",
          "match": "\\b(isolated\\s+)?(actor)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.actor.hew" },
            "2": { "name": "keyword.actor.hew" },
            "3": { "name": "entity.name.type.actor.hew" }
          }
        },
        {
          "comment": "Supervisor declaration",
          "match": "\\b(supervisor)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.supervisor.hew" },
            "2": { "name": "entity.name.type.supervisor.hew" }
          }
        },
        {
          "comment": "Trait declaration",
          "match": "\\b(trait)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.hew" },
            "2": { "name": "entity.name.type.trait.hew" }
          }
        },
        {
          "comment": "Struct declaration",
          "match": "\\b(struct)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.hew" },
            "2": { "name": "entity.name.type.struct.hew" }
          }
        },
        {
          "comment": "Enum declaration",
          "match": "\\b(enum)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.hew" },
            "2": { "name": "entity.name.type.enum.hew" }
          }
        },
        {
          "comment": "Impl block",
          "match": "\\b(impl)\\s+([A-Z][a-zA-Z0-9_]*)\\s+(for)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.hew" },
            "2": { "name": "entity.name.type.trait.hew" },
            "3": { "name": "keyword.declaration.hew" },
            "4": { "name": "entity.name.type.hew" }
          }
        },
        {
          "comment": "Wire type declaration",
          "match": "\\b(wire)\\s+(struct|enum)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.wire.hew" },
            "2": { "name": "keyword.declaration.hew" },
            "3": { "name": "entity.name.type.wire.hew" }
          }
        },
        {
          "comment": "Child spec in supervisor",
          "match": "\\b(child)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.supervisor.hew" },
            "2": { "name": "variable.other.hew" },
            "3": { "name": "entity.name.type.hew" }
          }
        },
        {
          "comment": "Spawn expression",
          "match": "\\b(spawn)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.actor.hew" },
            "2": { "name": "entity.name.type.hew" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.hew",
          "match": "->|=>"
        },
        {
          "name": "keyword.operator.logical.hew",
          "match": "&&|\\|\\|"
        },
        {
          "name": "keyword.operator.comparison.hew",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.hew",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.hew",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.question.hew",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.not.hew",
          "match": "!"
        },
        {
          "name": "keyword.operator.namespace.hew",
          "match": "::"
        },
        {
          "name": "keyword.operator.at.hew",
          "match": "@"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.brackets.round.hew",
          "match": "[()]"
        },
        {
          "name": "punctuation.brackets.curly.hew",
          "match": "[{}]"
        },
        {
          "name": "punctuation.brackets.square.hew",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.separator.comma.hew",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.hew",
          "match": ";"
        },
        {
          "name": "punctuation.separator.colon.hew",
          "match": ":"
        },
        {
          "name": "punctuation.separator.dot.hew",
          "match": "\\."
        },
        {
          "name": "punctuation.separator.pipe.hew",
          "match": "\\|"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "comment": "self reference",
          "name": "variable.language.self.hew",
          "match": "\\bself\\b"
        },
        {
          "comment": "Label (loop label)",
          "name": "entity.name.label.hew",
          "match": "'[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "comment": "Wildcard pattern",
          "name": "variable.language.wildcard.hew",
          "match": "\\b_\\b"
        }
      ]
    }
  }
}
